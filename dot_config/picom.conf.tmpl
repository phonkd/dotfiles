
blur:
{
method="dual_kawase";
strength=4
};

# Enable Fading
fading = true;
fade-delta = 10;
fade-in-step = 0.03;
fade-out-step = 0.03;

blur-background = true;
corner-radius = 8;
detect-client-opacity = true;
focus-exclude-regex = [ "name~=^.*Chromium$" "fullscreen" ];
mark-wmwin-focused = true;
mark-ovredir-focused = true;
shadow = true;
shadow-exclude-regex = [ "name~=^.*Chromium$" ];
inactive-opacity = 0.8;
backend = "glx";
